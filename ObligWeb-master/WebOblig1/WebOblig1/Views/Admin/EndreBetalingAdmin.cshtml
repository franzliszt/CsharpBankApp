@model WebOblig1.Model.DomeneBetaling

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="background-color:#eaeaea">
    <h2 class="overskrift-h2">Endre betaling</h2>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="col-md-12">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.betalingsId)
            @Html.HiddenFor(model => model.fraKonto)

            <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.tilKonto)
                    @Html.EditorFor(model => model.tilKonto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tilKonto, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.dato)
                    @Html.EditorFor(model => model.dato, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.dato, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-lg-3">
                @Html.LabelFor(model => model.kid)
                @Html.EditorFor(model => model.kid, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.kid, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-lg-3">
                @Html.LabelFor(model => model.belopKroner)
                @Html.EditorFor(model => model.belopKroner, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.belopKroner, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-lg-1">
                @Html.LabelFor(model => model.belopOrer)
                @Html.EditorFor(model => model.belopOrer, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.belopOrer, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-lg-6">
                @Html.LabelFor(model => model.melding)
                @Html.EditorFor(model => model.melding, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.melding, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-lg-12">
                <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-ok"></i></button>
                @Html.ActionLink(" ", "Transaksjoner", "Admin", new { knr = Model.fraKonto }, new { @class = "btn btn-danger glyphicon glyphicon-remove", @title = "Avbryt" })
            </div>
        </div>
    }
</div>
