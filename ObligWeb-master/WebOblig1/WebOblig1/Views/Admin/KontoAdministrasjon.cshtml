@model WebOblig1.Model.DomeneKonto

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="text-center">
        <h2>Kontoadministrasjon</h2>
    </div>
    <div style="margin-top:15px;">
        @if (ViewData["FEIL"] != null) {
            <h3 class="text-danger"><strong>FEIL:</strong> @ViewData["FEIL"].ToString()</h3>
        }
        @if (TempData["KONTO"] != null) {
            <h3 class="text-success">@TempData["KONTO"].ToString()</h3>
        }
        </div>

        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#nyKonto">Ny konto</a></li>
            <li><a data-toggle="tab" href="#endreKonto">Endre konto</a></li>
            <li><a data-toggle="tab" href="#kontoSlett">Slett konto</a></li>
        </ul>

        <div class="tab-content">
            <div id="nyKonto" class="tab-pane fade in active">
                @using (Html.BeginForm()) {
                    @Html.AntiForgeryToken()
                    <h3>Ny konto</h3>
                    <div class="col-md-12">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.personnummer)
                            @Html.EditorFor(model => model.personnummer, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.personnummer, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.kontonavn)
                                @Html.EditorFor(model => model.kontonavn, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.kontonavn, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.kontonummer)
                            @Html.EditorFor(model => model.kontonummer, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.kontonummer, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.saldo)
                            @Html.EditorFor(model => model.saldo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.saldo, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-md-12">
                            <button type="submit" title="Lagre konto" class="btn btn-success"><span class="glyphicon glyphicon-ok"></span></button>
                            @Html.ActionLink(" ", "KontoAdministrasjon", "Admin", null,
                            new { @class = "btn btn-warning glyphicon glyphicon-refresh", @title = "Nullstill felter" })
                        </div>
                    </div>
                }
            </div>


            <div id="endreKonto" class="tab-pane fade">
                @using (Html.BeginForm()) {
                    @Html.AntiForgeryToken()
                    <h3>Endre konto</h3>
                    <div class="col-md-12">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.personnummer)
                            @Html.EditorFor(model => model.personnummer, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.personnummer, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.kontonavn)
                                @Html.EditorFor(model => model.kontonavn, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.kontonavn, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.kontonummer)
                            @Html.EditorFor(model => model.kontonummer, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.kontonummer, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.saldo)
                            @Html.EditorFor(model => model.saldo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.saldo, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-md-12">
                            <button type="submit" title="Lagre endring" class="btn btn-success"><span class="glyphicon glyphicon-ok"></span></button>
                            @Html.ActionLink(" ", "KontoAdministrasjon", "Admin", null,
                            new { @class = "btn btn-warning glyphicon glyphicon-refresh", @title = "Nullstill felter" })
                        </div>
                    </div>
                }
            </div>

            <div id="kontoSlett" class="tab-pane fade">
                @using (Html.BeginForm("SlettKontoAdmin", "Admin")) {
                    @Html.AntiForgeryToken()
                    <h3>Slett en konto</h3>
                    <div class="container" style="background:#707070; margin-top:1.5em; color:white;">
                        <div class="form-group col-md-12">
                            <h3>Skriv inn kontonummer til kontoen du vil slette</h3>
                        </div>
                        <div class="form-group col-md-4">
                            <input type="text" name="knr" class="form-control" placeholder="Kontonummer" />
                        </div>
                        <div class="form-group col-md-12">
                            <button type="submit" title="Slett konto" name="knr" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
