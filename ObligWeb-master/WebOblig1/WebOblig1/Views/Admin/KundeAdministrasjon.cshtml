@model WebOblig1.Model.DomenePerson

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="text-center">
        <h2>Kundeadministrasjon</h2>
    </div>
    <div style="margin-top:15px;">
    @if (ViewData["FEIL"] != null) {
        <h3 class="text-danger"><strong>FEIL:</strong> @ViewData["FEIL"].ToString()</h3>
    }
    @if (TempData["NY"] != null) {
        <h3 class="text-success">@TempData["NY"].ToString()</h3>
    }
    </div>

    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#nyKunde">Ny kunde</a></li>
        <li><a data-toggle="tab" href="#kundeEndre">Endre kunde</a></li>
        <li><a data-toggle="tab" href="#kundeSlett">Slett kunde</a></li>
    </ul>
    <div class="tab-content">
        <div id="nyKunde" class="tab-pane fade in active">
            @using (Html.BeginForm()) {
                @Html.AntiForgeryToken()
                    <h3>Ny kunde</h3>
                <div class="col-md-12">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.personnummer)
                            @Html.EditorFor(model => model.personnummer, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.personnummer, "", new { @class = "text-danger" })
                        </div>
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.passord)
                        @Html.EditorFor(model => model.passord, new { htmlAttributes = new { @class = "form-control"} })
                        @Html.ValidationMessageFor(model => model.passord, "", new { @class = "text-danger" })
                    </div>

                   
                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.fornavn)
                            @Html.EditorFor(model => model.fornavn, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.fornavn, "", new { @class = "text-danger" })
                        </div>
                   
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.etternavn)
                        @Html.EditorFor(model => model.etternavn, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.etternavn, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.adresse)
                        @Html.EditorFor(model => model.adresse, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.adresse, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-2">
                        @Html.LabelFor(model => model.postnummer)
                        @Html.EditorFor(model => model.postnummer, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.postnummer, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.poststed)
                        @Html.EditorFor(model => model.poststed, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.poststed, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.telefonnummer)
                        @Html.EditorFor(model => model.telefonnummer, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.telefonnummer, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.epost)
                        @Html.EditorFor(model => model.epost, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.epost, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-12">
                        <button type="submit" class="btn btn-success" title="Lagre kunden"><i class="glyphicon glyphicon-ok"></i></button>
                        @Html.ActionLink(" ", "KundeAdministrasjon", "Admin", null,
                            new { @class = "btn btn-warning glyphicon glyphicon-refresh", @title = "Nullstill felter" })
                    </div>
                </div>
            }
            
        </div>
    

        <div id="kundeEndre" class="tab-pane fade">
            @using (Html.BeginForm()) {
                @Html.AntiForgeryToken()
                <h3>Endre en kunde</h3>
                <div class="col-md-12">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.personnummer)
                            @Html.EditorFor(model => model.personnummer, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.personnummer, "", new { @class = "text-danger" })
                        </div>
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.passord)
                        @Html.EditorFor(model => model.passord, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.passord, "", new { @class = "text-danger" })
                    </div>
                    
                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.fornavn)
                            @Html.EditorFor(model => model.fornavn, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.fornavn, "", new { @class = "text-danger" })
                        </div>
                    
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.etternavn)
                        @Html.EditorFor(model => model.etternavn, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.etternavn, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.adresse)
                        @Html.EditorFor(model => model.adresse, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.adresse, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-2">
                        @Html.LabelFor(model => model.postnummer)
                        @Html.EditorFor(model => model.postnummer, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.postnummer, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.poststed)
                        @Html.EditorFor(model => model.poststed, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.poststed, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.telefonnummer)
                        @Html.EditorFor(model => model.telefonnummer, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.telefonnummer, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.epost)
                        @Html.EditorFor(model => model.epost, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.epost, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-12">
                        <button type="submit" title="Lagre endring" class="btn btn-success"><span class="glyphicon glyphicon-ok"></span></button>
                        @Html.ActionLink(" ", "KundeAdministrasjon", "Admin", null,
                            new { @class = "btn btn-warning glyphicon glyphicon-refresh", @title = "Nullstill felter"})
                    </div>
                </div>
            }
        </div>

        <div id="kundeSlett" class="tab-pane fade">
            @using (Html.BeginForm("SlettKundeAdmin", "Admin")) {
                @Html.AntiForgeryToken()
                <h3>Slett en kunde</h3>
                <div class="container" style="background:#707070; margin-top:1.5em; color:white;">
                    <div class="form-group col-md-12">
                        <h3>Skriv inn personnummer til kunden du vil slette</h3>
                    </div>
                    <div class="form-group col-md-4">
                        <input type="text" name="pnr" class="form-control" placeholder="Personnummer" />
                    </div>
                    <div class="form-group col-md-12">
                        <button type="submit" title="Slett kunden" name="pnr" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>